<h2><%=@trivium.title%></h2><br>
<p>Correct Answers So Far:<%=@result%></p><br>
<%=form_with(method:"post",url:"/games/result/#{params[:id]}") do |f|%>
<ul>
    <%@questions.each do |q|%>
        <%=q.content%><br>
        <%q.answers.each do |a|%>
            <%=f.radio_button :"questions[#{q.id}]", a.id %>
            <%=a.content%><br>
        <% end %>
    <% end %>
    <%=f.submit "Submit Your Answers"%>
    </ul>
<% end %>

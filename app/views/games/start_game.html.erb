 <html>
<header>   
 <style>
body {
    style:"font-family:verdana";
    color:rgb(60, 93, 93);
    background-color:rgb(224, 235, 235);
}
  
</style>
</header>
<body>

<h2><%=@trivium.title%></h2>
<h4>Each question is 10 points. </h4>
<%=form_with(method:"post",url:"/games/result") do |f|%>
<ul>
    <%@questions.each do |q|%>
        <%=q.content%><br>
        <%q.answers.each do |a|%>
            <%=f.radio_button :"questions[#{q.id}]", a.id %>
            <%=a.content%><br>
        <% end %>
    <% end %>
    <%=f.submit "Submit Your Answers"%>
    </ul>
<% end %>
</body>
</html>